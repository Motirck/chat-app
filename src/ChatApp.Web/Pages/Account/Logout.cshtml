@page
@model ChatApp.Web.Pages.Account.LogoutModel
@{
    ViewData["Title"] = "Logout";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
            <div class="card shadow">
                <div class="card-body text-center">
                    <div class="mb-4">
                        <i class="fas fa-sign-out-alt text-primary" style="font-size: 3rem;"></i>
                    </div>
                    
                    <h2 class="card-title mb-3">Sign Out</h2>
                    <p class="text-muted mb-4">Are you sure you want to sign out?</p>
                    
                    <form method="post" class="d-inline">
                        <button type="submit" class="btn btn-primary me-2">
                            <i class="fas fa-sign-out-alt me-1"></i>
                            Yes, Sign Out
                        </button>
                    </form>
                    
                    <a href="/" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-1"></i>
                        Cancel
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>