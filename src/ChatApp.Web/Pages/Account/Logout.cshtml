@page
@model ChatApp.Web.Pages.Account.LogoutModel
@{
    ViewData["Title"] = "Logout";
}

<div class="max-w-md mx-auto">
    <div class="rounded-xl border border-gray-200 bg-white shadow dark:border-gray-700 dark:bg-gray-800">
        <div class="p-6 text-center">
            <div class="mb-4">
                <i class="fas fa-sign-out-alt text-blue-600" style="font-size: 3rem;"></i>
            </div>
            
            <h2 class="text-xl font-semibold mb-2">Sign Out</h2>
            <p class="text-gray-600 dark:text-gray-300 mb-6">Are you sure you want to sign out?</p>
            
            <form method="post" class="inline">
                <button type="submit" class="inline-flex items-center gap-2 rounded-md bg-brand px-4 py-2 text-white hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-300 mr-2">
                    <i class="fas fa-sign-out-alt"></i>
                    Yes, Sign Out
                </button>
            </form>
            
            <a href="/" class="inline-flex items-center gap-2 rounded-md border border-gray-300 px-4 py-2 text-gray-700 hover:bg-gray-50 dark:text-gray-200 dark:border-gray-700 dark:hover:bg-gray-900/30">
                <i class="fas fa-arrow-left"></i>
                Cancel
            </a>
        </div>
    </div>
</div>