@page
@model IndexModel
@{
    ViewData["Title"] = "ChatApp";
}

<div class="text-center max-w-3xl mx-auto py-12">
    <h1 class="text-4xl font-bold tracking-tight text-gray-900 dark:text-gray-100">Welcome to ChatApp</h1>
    <p class="mt-3 text-lg text-gray-600 dark:text-gray-300">A real-time chat application with stock quotes</p>
    
    @if (User.Identity?.IsAuthenticated == true)
    {
        <a class="inline-flex items-center gap-2 mt-6 rounded-md bg-brand px-6 py-3 text-white hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-300" asp-page="/Chat">
            <i class="fas fa-comments"></i>
            Enter Chat Room
        </a>
    }
    else
    {
        <div class="mt-8 flex items-center justify-center gap-3">
            <a class="inline-flex items-center gap-2 rounded-md bg-brand px-6 py-3 text-white hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-300" asp-page="/Account/Login">
                <i class="fas fa-sign-in-alt"></i>
                Sign In
            </a>
            <a class="inline-flex items-center gap-2 rounded-md border border-blue-600 text-blue-600 px-6 py-3 hover:bg-blue-50 dark:hover:bg-blue-900/20 focus:outline-none focus:ring-2 focus:ring-blue-300" asp-page="/Account/Register">
                <i class="fas fa-user-plus"></i>
                Register
            </a>
        </div>
    }
</div>