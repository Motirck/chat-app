@page
@model IndexModel
@{
    ViewData["Title"] = "ChatApp";
}

<div class="text-center">
    <h1 class="display-4">Welcome to ChatApp</h1>
    <p class="lead">A real-time chat application with stock quotes</p>
    
    @if (User.Identity?.IsAuthenticated == true)
    {
        <a class="btn btn-primary btn-lg" asp-page="/Chat">Enter Chat Room</a>
    }
    else
    {
        <div class="mt-4">
            <a class="btn btn-primary btn-lg me-3" asp-page="/Account/Login">Sign In</a>
            <a class="btn btn-outline-primary btn-lg" asp-page="/Account/Register">Register</a>
        </div>
    }
</div>